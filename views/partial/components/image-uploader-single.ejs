<%
iusName = (typeof iusName !== 'undefined' ? iusName : 'Image');
iusTitle = (typeof iusTitle !== 'undefined' ? iusTitle : 'Click to upload images');
iusFileType = (typeof iusFileType !== 'undefined' ? iusFileType : 'image/*');
%>
<div class="ius-image-uploader-container">
    <input type="file" class="ius-hidden-input" accept="image/*">

    <label class="ius-upload-area">
        <img src="https://placehold.co/100x80/e5e7eb/1f2937?text=<%- iusName %>" alt="<%- iusName %>" class="ius-default-image">
        <div class="ius-upload-indicator">
            <svg class="ius-upload-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                <path
                    d="M288 109.3V352c0 17.7-14.3 32-32 32s-32-14.3-32-32V109.3l-53.3 53.3c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3l109.3-109.3c12.5-12.5 32.8-12.5 45.3 0l109.3 109.3c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L288 109.3zM64 352H192c0 35.3 28.7 64 64 64s64-28.7 64-64H448c35.3 0 64-28.7 64-64V192c0-35.3-28.7-64-64-64H352c-17.7 0-32 14.3-32 32s14.3 32 32 32h96c0 0 0 0 0 0v96c0 0 0 0 0 0H64c0 0 0 0 0 0V160h96c17.7 0 32-14.3 32-32s-14.3-32-32-32H64C28.7 96 0 124.7 0 160V288c0 35.3 28.7 64 64 64z" />
            </svg>
            <p class="ius-upload-text"><%- iusTitle %></p>
        </div>
        <div class="ius-image-preview-container">
            <img src="#" alt="Image Preview" class="ius-image-preview">
            <button type="button" class="ius-remove-image-button">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
                    <path
                        d="M310.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L160 210.7 54.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L114.7 256 9.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L160 301.3 265.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L205.3 256 310.6 150.6z" />
                </svg>
            </button>
        </div>
    </label>
</div>