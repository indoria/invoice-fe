            justify-content: space-between;
            padding: 0.5rem;
            border: none;
            border-bottom: 1px solid #eee;
            position: relative;
            flex-direction: column;
        }

        #invoiceItemsTable td::before {
            content: attr(data-label);
            font-weight: bold;
            flex: 1;
            padding-right: 0.5rem;
        }

        #invoiceItemsTable td input,
        #invoiceItemsTable td textarea {
            flex: 2;
            max-width: 100%;
        }

        #invoiceItemsTable tfoot td {
            display: block;
            text-align: right;
        }
    }
