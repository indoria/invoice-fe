    <script>
        const dueDateField = DueDateModule.create('dueDateField');
        document.getElementById("invoiceForm").addEventListener("submit", function (event) {
            event.preventDefault();
            return false;
        });
        function calculateTotals() {
            let subtotalBeforeDiscount = 0;
            document.querySelectorAll('#invoiceItemsTable tbody tr.item-row').forEach(row => {
                const unitPriceInput = row.querySelector('input[name="itemUnitPrice[]"]');
                const quantityInput = row.querySelector('input[name="itemQuantity[]"]');
                const itemDiscountInput = row.querySelector('input[name="itemDiscount[]"]');
                const itemTotalCell = row.querySelector('.itemTotal');

                const unitPrice = parseFloat(unitPriceInput.value) || 0;
                const quantity = parseInt(quantityInput.value) || 0;
                const itemDiscountRate = parseFloat(itemDiscountInput.value) || 0;

                const itemTotalBeforeDiscount = unitPrice * quantity;
                const itemDiscountAmount = itemTotalBeforeDiscount * (itemDiscountRate / 100);
                const itemTotalAfterDiscount = itemTotalBeforeDiscount - itemDiscountAmount;

                itemTotalCell.textContent = '$' + itemTotalAfterDiscount.toFixed(2);
                subtotalBeforeDiscount += itemTotalAfterDiscount;
            });

            document.getElementById('subtotal').textContent = '$' + subtotalBeforeDiscount.toFixed(2);

            const overallDiscountInput = document.getElementById('overallDiscount');
            const overallDiscountAmountCell = document.getElementById('overallDiscountAmount');
            const taxRateInput = document.getElementById('taxRate');
            const taxAmountCell = document.getElementById('taxAmount');
            const totalCell = document.getElementById('total');

            const overallDiscountRate = parseFloat(overallDiscountInput.value) || 0;
            const overallDiscountAmount = subtotalBeforeDiscount * (overallDiscountRate / 100);
            overallDiscountAmountCell.textContent = '$' + overallDiscountAmount.toFixed(2);

            const subtotalAfterOverallDiscount = subtotalBeforeDiscount - overallDiscountAmount;

            const taxRate = parseFloat(taxRateInput.value) || 0;
            const taxAmount = subtotalAfterOverallDiscount * (taxRate / 100);
            taxAmountCell.textContent = '$' + taxAmount.toFixed(2);

            const arrearsAmountCell = document.getElementById('arrearsAmount');
            const arrearsInput = document.getElementById('arrears');
            const arrears = parseFloat(arrearsInput.value) || 0;
            arrearsAmountCell.textContent = '$' + arrears.toFixed(2);

            const total = subtotalAfterOverallDiscount + taxAmount + arrears;
            totalCell.textContent = '$' + total.toFixed(2);
        }

        document.getElementById('addItem').addEventListener('click', function () {
            const tbody = document.querySelector('#invoiceItemsTable tbody');
            const newItemRow = document.createElement('tr');
            newItemRow.classList.add('item-row');
            newItemRow.innerHTML = `
    <td data-label="item">
        <input type="text" name="itemName[]" class="item-name" placeholder="Item name">
        <textarea name="itemDescription[]" class="item-description" placeholder="Item Description (optional)"></textarea>
    </td>
    <td data-label="Cost">
        <input type="number" name="itemUnitPrice[]" value="0.00" step="0.01" class="item-unit-price" placeholder="Price per unit">
    </td>
    <td data-label="Quantity">
        <input type="number" name="itemQuantity[]" value="1" min="0" class="item-quantity" placeholder="Quantity">
    </td>
     <td data-label="Discount (%)">
        <input type="number" name="itemDiscount[]" value="0" step="0.1" min="0" max="100" class="item-discount" placeholder="Discount">
    </td>
    <td class="itemTotals" data-label="Total">
        <span class="itemTotal">$0.00</span>
        <button type="button" class="removeItem"></button>
    </td>
`;
            tbody.appendChild(newItemRow);

            newItemRow.querySelectorAll('input[type="number"], input[type="text"], textarea').forEach(input => {
                input.addEventListener('input', calculateTotals);
            });

            newItemRow.querySelector('.removeItem').addEventListener('click', function () {
                newItemRow.remove();
                calculateTotals();
            });

            calculateTotals();
        });

        document.querySelectorAll('#invoiceItemsTable tbody input[type="number"], #invoiceItemsTable tbody input[type="text"], #invoiceItemsTable tbody textarea').forEach(input => {
            input.addEventListener('input', calculateTotals);
        });

        document.getElementById('taxRate').addEventListener('input', calculateTotals);
        document.getElementById('arrears').addEventListener('input', calculateTotals);
        document.getElementById('overallDiscount').addEventListener('input', calculateTotals);


        document.querySelectorAll('#invoiceItemsTable .removeItem').forEach(button => {
            button.addEventListener('click', function () {
                button.closest('.item-row').remove();
                calculateTotals();
            });
        });

        calculateTotals();
    </script>
<% } %>