            background: #f0f0f0;
            color: #000;
        }

        .removeItem:focus {
            outline: 2px solid #ccc;
        }
        .removeItem::before {
            content: "\00D7";
            font-size: 20px;
            font-weight: bold;
            color: #666;
            position: absolute;
            transform: translate(-50%, -50%);
            pointer-events: none;
        }


    @media (max-width: 768px) {
        #invoiceItemsTable,
        #invoiceItemsTable thead,
        #invoiceItemsTable tbody,
        #invoiceItemsTable th,
        #invoiceItemsTable td,
        #invoiceItemsTable tr {
            display: block;
        }

        #invoiceItemsTable thead {
            display: none;
        }

        #invoiceItemsTable tr.item-row {
            margin-bottom: 1rem;
            border: 1px solid #ccc;
            padding: 0.5rem;
        }

        #invoiceItemsTable td {
